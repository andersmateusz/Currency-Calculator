<div class="container" style="float:center">
   
    <div class="row align-items-center">
        <div class="col-lg-5 border border-1 rounded-3 bg-light" >
            {{ form_start(ConverterType, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="mb-3 row align-items-center">
            <div class="col-lg-12 text-left ">
            <p class="text-right">{{latestDate}}</p>
            <p class="h4">{{latestValue}} {{latestCode1}} = </p>
            <p class="h2 text-center">{{latestResult}} {{latestCode2}}</p>
            </div>
            </div>
            <div class="mb-3 row align-items-center">
                <div class="col-lg-6">
                    {{ form_label(ConverterType.value, 'Money Amount:') }}
                    {{ form_row(ConverterType.value, {'attr': {'class': ' form-control'}})  }}
                </div>
                <div class="col-lg-6">
                {{ form_label(ConverterType.firstCurrency, 'First Currency:') }}
                    {{ form_row(ConverterType.firstCurrency, {'attr': {'class': ' form-select'}}) }}
                </div>
            </div>
            <div class="mb-3 row align-items-end">
                <div class="col-lg-6">
                {{ form_label(ConverterType.secondCurrency, 'Second Currency:') }}
                    {{ form_row(ConverterType.secondCurrency, {'attr': {'class': ' form-select'}}) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(ConverterType.submit, {'attr': {'class': ' btn btn-outline-success'}, 'label': 'Convert' }) }}
                </div>
            </div>
                <div class="row align-items-center">
                    <div class="col-lg-12 text-left ">
                        {{ form_errors(ConverterType) }}
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="col-lg-12 text-left ">
                        <p class="h5">Currency Converter</p>
                    </div>
                </div>
                
            {{ form_end(ConverterType) }}
        </div>
    
        <div class="col-lg-5 offset-lg-2 border border-1 rounded-3 bg-light ">
            {{ form_start(CheckGrowthType, {'attr': {'novalidate': 'novalidate'}}) }}
            
            {{ form_errors(CheckGrowthType) }}
            <div class="mb-3 row align-items-center">
                <div class="col-lg-12 text-left ">
                    <p>
                    {{pastDate1}} : 1 {{pastCode1}} = {{pastResult1}} {{pastCode2}}</br>
                    {{pastDate2}} : 1 {{pastCode1}} = {{pastResult2}} {{pastCode2}}
                    </p>
                    <p class="h2 text-center">Change: <span
                    {% if isGrowing==1 %}
                    style="color:green">+{{percent}}%</span>
                    {% elseif isGrowing==2 %}
                    style="color:red">{{percent}}%</span>
                    {% endif %}
                    
                    {% if isGrowing==1 %}
                    <img src="up48.png">
                    {% elseif isGrowing==2 %}
                    <img src="down48.png">
                    {% endif %}
                    </p>
                </div>
            </div>
            <div class="mb-3 row align-items-center">
                <div class="mb-3 row align-items-center">
                    <div class="col-lg-6">
                        {{ form_label(CheckGrowthType.startDate, 'Start Date:') }}
                        {{ form_row(CheckGrowthType.startDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-lg-6">
                     {{ form_label(CheckGrowthType.endDate, 'End Date:') }}
                        {{ form_row(CheckGrowthType.endDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="mb-3 row align-items-center">
                    <div class="col-lg-6">
                        {{ form_label(CheckGrowthType.firstCurrency, 'First Currency:') }}
                        {{ form_row(CheckGrowthType.firstCurrency, {'attr': {'class': 'form-select'}}) }}
                       
                    </div>
                    <div class="col-lg-6">
                    {{ form_label(CheckGrowthType.secondCurrency, 'Second Currency:') }}
                            {{ form_row(CheckGrowthType.secondCurrency, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>
                <div class="mb-3 row align-items-center">
                    <div class"col-lg-6 " >
                        {{ form_row(CheckGrowthType.submit, {'attr': {'class': ' btn btn-outline-success'}, 'label': 'Calculate' }) }}
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="col-lg-12 text-left ">
                        <p class="h5">Check Currency Exchange Rate Change</p>
                    </div>
                </div>
            {{ form_end(CheckGrowthType) }}
        </div>

</div>

