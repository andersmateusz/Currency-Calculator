{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">   
     <a class="navbar-brand" href="#">
      <img src="currency-exchange.svg" alt="" width="50" height="50">
    {{title}}
    </a>
    <span class="navbar-text">
    Get your API key for free at <a href="https://exchangeratesapi.io">exchangeratesapi.io</a>.
    </span>
    <form class="d-flex">
       {{ form_start(ApiKeyType) }}
          
            {{ form_row(ApiKeyType.apiKey, {'attr': {'class': 'form-control me-2','placeholder':'Insert your API key'}}) }}
            
            {{ form_row(ApiKeyType.submitApiKey, {'attr': {'class': ' btn btn-outline-success'}, 'label': 'Confirm' }) }}
  
        {{ form_end(ApiKeyType) }}
    </form>
    </div>  
</nav>
</br></br></br></br></br></br></br></br>
<div class="container" style="float:center">
   
    <div class="row align-items-center">
    
        <div class="col-lg-5 border border-1 rounded-3 bg-light">
            {{ form_start(ConverterType) }}
            {{ form_errors(ConverterType) }}
            <div class="mb-3 row align-items-center">
            <div class="col-lg-12 text-center ">
            <p class="h2">Currency Converter</p>
            </div>
            </div>
            <div class="mb-3 row align-items-center">
                <div class="col-lg-6">
                    {{ form_label(ConverterType.value, 'Value:') }}
                    {{ form_row(ConverterType.value, {'attr': {'class': ' form-control'}})  }}
                </div>
                <div class="col-lg-6">
                {{ form_label(ConverterType.first_currency, 'First Currency:') }}
                    {{ form_row(ConverterType.first_currency, {'attr': {'class': ' form-select'}}) }}
                </div>
            </div>
            <div class="mb-3 row align-items-end">
                <div class="col-lg-6">
                {{ form_label(ConverterType.second_currency, 'Second Currency:') }}
                    {{ form_row(ConverterType.second_currency, {'attr': {'class': ' form-select'}}) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(ConverterType.submit, {'attr': {'class': ' btn btn-outline-success'}, 'label': 'Convert' }) }}
                </div>
            </div>
            {{ form_end(ConverterType) }}
        </div>
    
        <div class="col-lg-5 offset-lg-2 border border-1 rounded-3 bg-light">
            {{ form_start(CheckGrowthType) }}
            {{ form_errors(CheckGrowthType) }}
            <div class="mb-3 row align-items-center">
            <div class="col-lg-12 text-center">
            <p class="h2">Check Currency Growth</p>
            </div>
            </div>
            <div class="mb-3 row">
                <div class="mb-3 row">
                    <div class="col-lg-6">
                        {{ form_label(CheckGrowthType.firstDate, 'Start Date:') }}
                        {{ form_row(CheckGrowthType.firstDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-lg-6">
                     {{ form_label(CheckGrowthType.secondDate, 'End Date:') }}
                        {{ form_row(CheckGrowthType.secondDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-lg-6">
                        {{ form_label(CheckGrowthType.first_currency, 'First Currency:') }}
                        {{ form_row(CheckGrowthType.first_currency, {'attr': {'class': 'form-select'}}) }}
                       
                    </div>
                    <div class="col-lg-6">
                    {{ form_label(CheckGrowthType.second_currency, 'Second Currency') }}
                            {{ form_row(CheckGrowthType.second_currency, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>
                <div class="mb-3 row ">
                    <div class"col-lg-6 " >
                        {{ form_row(CheckGrowthType.submit, {'attr': {'class': ' btn btn-outline-success'}, 'label': 'Calculate' }) }}
                    </div>
                </div>
            {{ form_end(CheckGrowthType) }}
        </div>

</div>
{% endblock %}
 

 